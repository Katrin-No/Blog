%body
  = form_with(model: comment, local: true) do |form|
    - if comment.errors.any?
      #error_explanation
        -# %h2
        -#   = pluralize(comment.errors.count, "error")
        -#   prohibited this comment from being saved:
        %ul
          - comment.errors.full_messages.each do |message|
            %li= message

    .form-group.white-on-black
      = form.label :commenter, 'Autor'
      = form.text_field :commenter, class: 'form-control', placeholder: 'Name'
    .form-group.white-on-black
      = form.label :body, 'Kommentar'
      = form.text_area :body, class: 'form-control', rows: 3, placeholder: 'VorschlÃ¤ge, Bemerkungen'
    .form-group.white-on-black
      = form.label :post_id, 'Post id'
      = form.text_field :post_id, class: 'form-control'
    %button.btn.btn-primary{:type => "submit"} Abschicken
