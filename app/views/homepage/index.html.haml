.tags-oben
  - Tag.all.each do |tag|
    %a.mbadge.badge-primary{:href => show_tag_path(tag)}
      %h6.titel-font= tag.name
%br/
.mcontainer.mobile
  .row.space-bw
    - @posts.each do |post|
      .allert.alert-prim.flex{:role => "allert"}
        %h3= link_to post.title, post
        %p.font== #{time_ago_in_words post.created_at} ago
        .tags  
          - post.tags.each do |tag|
            %a.badge.badge-primary{:href => show_tag_path(tag)}= tag.name