.mbadge.badge-primary.m-bottom
  %h6.titel-font= @tag.name

.mcontainer.negative-marg
  .space-bw
    - @tag.posts.each do |post|
      .allert.alert-prim.flex{:role => "allert"}
        %h3= link_to post.title, post
        %p== #{time_ago_in_words post.created_at} ago
        .tags
          - post.tags.each do |tag|
            %a.badge.badge-primary{:href => "#{show_tag_path(tag)}"}= tag.name
